{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ],
  "typeAcquisition": {
    "enable": true
  }
}
